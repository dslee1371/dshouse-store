<h2>마이페이지</h2>
<p class="muted" style="margin-top:0">안녕하세요, <strong><%= user.name || user.email %></strong> 님</p>

<h3 style="margin-top:20px">나의 주문</h3>
<% if (!orders.length) { %>
  <p>아직 주문이 없습니다.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr><th>주문번호</th><th>상품</th><th>옵션</th><th>수량</th><th>금액</th><th>상태</th><th>주문일</th></tr>
    </thead>
    <tbody>
      <% orders.forEach(o=>{ %>
        <tr>
          <td>#<%= o.id %></td>
          <td><%= o.title %></td>
          <td><%= (o.option_size||'') + (o.option_color? (' / ' + o.option_color) : '') %></td>
          <td><%= o.quantity %></td>
          <td><%= o.amount.toLocaleString() %>원</td>
          <td><%= o.status %></td>
          <td><%= new Date(o.created_at).toLocaleString('ko-KR') %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>